@{
    ViewData["Title"] = "Marcar Consulta";

}

<style>

    th {
            text-align: center;

    }

</style>

<h1 align="center">@ViewData["Title"]</h1>


<button type="button" class="btn btn-primary" onclick="Novo()">Novo</button>


<br>
<br>

<table class="table table-striped">

    <tr>
        <th>Paciente</th>
        <th>Profissional</th>
        <th>Data Agendamento</th>
        <th>Horário Início</th>
        <th>Horário Término</th>
        <th>#</th>
        <th>#</th>
    </tr>


    @{foreach (var item in (List<AgendamentoModel>)ViewBag.listaAgendamento)
        {
            <tr>
                <td>@item.PacienteId</td>
                
                <td>@item.ProfissionalNome</td>
                <td>@item.ProfissionalAgendaId</td>
                <td></td>
                <td></td>
                
                <td align="center"><button type="button" class="btn btn-block btn-outline-warning" onclick = "Atualizar(@item.Id.ToString())">Editar</button></td>
                <td align="center"><button type="button" class="btn btn-block btn-outline-danger" onclick = "Excluir(@item.Id.ToString())">Excluir</button></td>
            </tr>
        }
    }

</table>


<script>

    function Novo(){

        window.location.href = "../Agendamento/Cadastrar";

    }

    function Atualizar(id){

        window.location.href = "../Agendamento/Cadastrar/" + id;
        
    }

    function Excluir(id){

        window.location.href = "../Agendamento/Excluir/" + id;
        
    }

</script>